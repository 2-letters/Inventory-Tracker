

<script>
        var model =  @Html.Raw(Json.Encode(Model))
</script>

<style>
    .flex {
        flex: 0;
    }
</style>

<div id="app">

    <v-app id="inspire">
        <v-card>
            <v-card-title>
                <v-card-actions>
                    <v-spacer></v-spacer>
                    <v-btn flat color="purple" href="/Home">Home</v-btn>
                    <v-btn flat color="purple">Inventory</v-btn>
                </v-card-actions>

                <v-spacer></v-spacer>
                <v-text-field v-model="search "
                              append-icon="search"
                              label="search inventory"
                              single-line
                              hide-details>

                </v-text-field>

            </v-card-title>

        </v-card>
        <v-flex offset-md11>
            <v-switch v-model="switch1"
                      :label="`${action}`"></v-switch>
        </v-flex>
        <v-flex xs12 sm10 offset-sm1>
            <v-card>
                <v-container>
                    <v-layout row>
                        <v-flex xs12
                                md2 offset-md1>
                            <div>
                                name
                            </div>
                        </v-flex>
                        <v-flex xs12
                                md3>
                            <div>
                                location
                            </div>
                        </v-flex>
                        <v-flex xs12
                                md3>
                            <div>
                                quantity
                            </div>
                        </v-flex>
                        <v-flex xs12
                                md3>
                            <div> more info</div>
                        </v-flex>
                    </v-layout>
                </v-container>
            </v-card>
        </v-flex>
       <br />




        <v-flex v-for="list in filteredEquipment" :key="n" :search="search">

            <div v-if="show">
                <v-layout>
                    <v-flex xs12 sm10 offset-sm1>
                        <v-card>
                            <v-container>

                                <v-layout row>
                                    <div>{{list.index}}</div>
                                    <v-flex xs12
                                            md2 offset-md1>
                                        <div>
                                            {{list.name}}
                                        </div>
                                    </v-flex>
                                    <v-flex xs12
                                            md3>
                                        <div>
                                            {{list.location}}
                                        </div>
                                    </v-flex>
                                    <v-flex xs12
                                            md3>
                                        <div>
                                            {{list.quantity}}
                                        </div>
                                    </v-flex>
                                    <v-flex xs12
                                            md3>
                                        <v-dialog v-model="dialog[list.name]" lazy absolute width="500">
                                            <v-btn flat icon color="blue lighten-2"
                                                   v-on:click.stop="$set(dialog, list.name, true)" slot="activator">
                                                <v-icon>info</v-icon>
                                            </v-btn>
                                            <v-card>
                                                <v-card-title>
                                                    <div class="headline">More Info for '{{ list.name }}'</div>
                                                </v-card-title>
                                                <v-card-text>
                                                    <v-img :src="list.pictureUrl" aspect-ratio="1"></v-img>
                                                    <b> Description:</b> {{list.description}}
                                                    <br />
                                                    <b>location:</b> {{list.location}}
                                                </v-card-text>
                                                <v-card-actions>
                                                    <v-spacer></v-spacer>
                                                    <v-btn class="blue--text" flat="flat"
                                                           v-on:click.stop="$set(dialog, props.item.equipment, false)">Close</v-btn>

                                                </v-card-actions>
                                            </v-card>
                                        </v-dialog>
                                    </v-flex>


                                </v-layout>


                            </v-container>

                        </v-card>
                    </v-flex>

                </v-layout>
                <br />
            </div>

            <div v-else>
                <v-layout>
                    <v-flex xs12 sm10 offset-sm1>
                        <v-card>
                            <v-form v-model="valid">
                                <v-container>
                                    <v-layout row>
                                        <div>{{list.index}}</div>
                                        <v-flex xs12
                                                md6 lg6>

                                            <v-text-field v-model="list.name"
                                                          label="Equipment name"
                                                          required></v-text-field>
                                        </v-flex>
                                        <v-flex xs12
                                                md6 lg6>
                                            <v-text-field v-model="list.location"
                                                          label="Location"
                                                          required></v-text-field>
                                        </v-flex>


                                    </v-layout>
                                    <v-layout>
                                        <v-flex xs12
                                                md6>
                                            <v-textarea v-model="list.description"
                                                        label="Description"
                                                        required></v-textarea>
                                        </v-flex>
                                        <v-flex xs12
                                                md4 offset-md1>
                                            <v-text-field type="number" v-model="list.quantity"
                                                          :rules="nameRules"
                                                          label="Quantity"
                                                          required></v-text-field>
                                        </v-flex>
                                        <v-flex xs12 md2>
                                            <v-layout row>

                                                <button>
                                                    <v-icon color="blue">camera_alt</v-icon>
                                                </button>

                                                <v-btn flat icon v-on:click="deleteItem(list.id, list.index)">
                                                    <v-icon color="red">delete</v-icon>
                                                </v-btn>

                                            </v-layout>
                                        </v-flex>
                                        <v-flex>

                                        </v-flex>
                                    </v-layout>

                                </v-container>
                            </v-form>
                        </v-card>
                    </v-flex>
                </v-layout>

            </div>
        </v-flex>

        </v-flex>
        <v-flex xs12 sm10 offset-sm1 id="actioncard" v-if="actBtn">
            <v-card>
                <v-container>
                    <v-layout row>
                        <v-flex xs12 md6 offset-md4 id="sbmBtn">

                            <v-btn color="#7cf190" v-on:click="addItem()">
                                <v-icon>add</v-icon>
                            </v-btn>

                            <v-btn color="#7cf190" v-on:click="save()">
                                Save
                            </v-btn>
                        </v-flex>
                    </v-layout>
                </v-container>
            </v-card>
        </v-flex>


    </v-app>
</div>

<script src="~/Scripts/ViewInventory.js"></script>


