        var model =  @Html.Raw(Json.Encode(Model))
</script>


<div id="app">

    <v-app id="inspire">
        <v-card>
            <v-card-title>
                <v-card-actions>
                    <v-spacer></v-spacer>
                    <v-btn flat color="purple" href="/Home">Home</v-btn>
                    <v-btn flat color="purple">Inventory</v-btn>
                </v-card-actions>

                <v-spacer></v-spacer>

            </v-card-title>

        </v-card>
        <br />
        <div v-for="(list, index) in equipment">
            <v-layout>
                <v-flex xs12 sm10 offset-sm1>
                    <v-card>
                        <v-container>
                            <v-layout row>
                                <v-flex xs12
                                        md2 offset-md1>
                                    <div>
                                        {{list.name}}
                                    </div>
                                </v-flex>
                                <v-flex xs12
                                        md3 >
                                    <div>
                                        {{list.location}}
                                    </div>
                                </v-flex>
                                <v-flex xs12
                                        md3 >
                                    <div>
                                        <v-icon>info</v-icon>
                                    </div>
                                </v-flex>


                            </v-layout>
                           

                        </v-container>

                    </v-card>
                </v-flex>

            </v-layout>
            <br />
        </div>
        <v-flex offset-sm11>

            <v-btn fab dark color="green" v-on:click=>
                <v-icon dark>add</v-icon>
            </v-btn>
        </v-flex>

    </v-app>
</div>
<script src="~/Scripts/ViewInventory.js"></script>


