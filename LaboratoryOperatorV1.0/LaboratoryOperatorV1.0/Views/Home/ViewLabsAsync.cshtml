@model LaboratoryOperatorV1._0.Models.listIndex


<script>
        var model =  @Html.Raw(Json.Encode(Model))
</script>



<div id="app">
    <v-app id="inspire">
        <v-container grid-list-md text-xs-center>
            <v-flex xs12>
                <v-card>

                    <v-card-title>
                        Un Added Lab Equipment
                        <v-spacer></v-spacer>
                        <v-text-field v-model="search"
                                      append-icon="search"
                                      label="Search"
                                      single-line
                                      hide-details></v-text-field>
                    </v-card-title>
                    <v-data-table :headers="Headers"
                                  :items="items"
                                  :search="search"
                                  item-key="equipment"
                                  hide-actions
                                  expand
                                  class="elevation-1">
                        <template slot="items" scope="props">
                            <td class="text-xs">{{ props.item.equipment }}</td>
                            <td class="text-xs">{{ props.item.location }}</td>
                            <td class="text-xs">{{ props.item.qty }}  </td>
                            <td class="text-xs">
                                <button v-on:click="decrement()">
                                    <v-icon color="pink">remove</v-icon>
                                </button>
                                <button v-on:click="increment()">
                                    <v-icon color="green">add</v-icon>
                                </button>
                            </td>

                        </template>
                    </v-data-table>
                </v-card>
            </v-flex>
            <br />

            <v-layout>
                <v-flex xs4>
                    <form>
                        <v-card height="60%">

                            <v-app>
                                <div>
                                    <div>
                                        <label for="name">Name:</label>
                                        <br />
                                        <input type="text" id="container" placeholder="name">
                                    </div>

                                    <div>
                                        <label for="review">Review:</label>
                                        <br />
                                        <textarea id="review" placeholder="description"></textarea>
                                    </div>


                                    <div>
                                        <br />
                                        <input type="submit" style="background-color:#22d015;" value="Submit">
                                    </div>

                                </div>
                            </v-app>

                        </v-card>
                    </form>

                </v-flex>
                <v-flex xs8>
                    <v-card>
                        <v-card-title>
                            Added Lab Equipment
                            <v-spacer></v-spacer>
                            <v-text-field v-model="searchAdded"
                                          append-icon="search"
                                          label="Search"
                                          single-line
                                          hide-details></v-text-field>
                        </v-card-title>
                        <v-data-table :headers="Headers2"
                                      :items="items2"
                                      :search="search2"
                                      item-key="equipment2"
                                      hide-actions
                                      expand
                                      class="elevation-1">
                            <template slot="AddedItems" scope="props">
                                <td class="text-xs">placeholder</td>
                                <td class="text-xs">placeholder</td>
                                <td class="text-xs">placeholder  </td>
                                <td class="text-xs">
                                    <button v-on:click="decrementAddedItems()">
                                        <v-icon color="pink">remove</v-icon>
                                    </button>
                                    <button v-on:click="incrementAddedItems()">
                                        <v-icon color="green">add</v-icon>
                                    </button>
                                </td>

                            </template>
                        </v-data-table>
                    </v-card>

                </v-flex>
            </v-layout>



        </v-container>

    </v-app>

</div>


<script src="~/Scripts/ViewLabs.js"></script>